<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="MedPrice.Views.LandingPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MedPrice.Views"
    xmlns:models="using:MedPrice.Models"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Padding="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="0.5*" />
            <RowDefinition Height="2*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="2*" />
        </Grid.RowDefinitions>


        <!-- Descriptor, input and button elements-->
        <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Vertical" VerticalAlignment="Top">
            <TextBlock Text="Aktivt stof:" Margin="0,0,10,10"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBox x:Name="InputField2" Grid.Column="0" PlaceholderText="Enter second value" Margin="0,0,10,10"/>
                <Button Content="Find prÃ¦perater" Grid.Column="1" Click="AktivtStof_Click" Margin="0,0,10,10" HorizontalAlignment="Stretch"/>
            </Grid>
        </StackPanel>

        <!-- ItemsView of pharmaceuticals  -->
        <ItemsView Grid.Row="1" Grid.Column="1" Grid.RowSpan="1" 
           ItemsSource="{Binding Drugs}"
           SelectionMode="None"
           IsItemInvokedEnabled="True"
           ItemInvoked="ItemList_ItemInvoked"
           VerticalAlignment="Stretch"
           Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}"
           BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
           BorderThickness="2"
           CornerRadius="{StaticResource OverlayCornerRadius}">
            <ItemsView.Layout>
                <UniformGridLayout
                                   ItemsStretch="Fill"
                                   MaximumRowsOrColumns="1" 
                                   MinItemHeight="40"/>
            </ItemsView.Layout>
        </ItemsView>

        <!-- SubGrid definitions to hold details on selected pharmaceutical -->
        <Grid Grid.Row="1" Grid.Column="2" Grid.RowSpan="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- RegionContains: Text elements showing information on selected pharmaceutical -->
            <!--#region -->
            <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Vertical">
                <TextBlock Text="Navn" VerticalAlignment="Center" />
                <TextBox Text="{Binding SelectedDrug.Navn}" VerticalAlignment="Center" />
            </StackPanel>

            <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Vertical">
                <TextBlock Text="Varenummer" VerticalAlignment="Center" />
                <TextBox Text="{Binding SelectedDrug.Varenummer}" VerticalAlignment="Center" />
            </StackPanel>

            <StackPanel Grid.Row="2" Grid.Column="0" Orientation="Vertical">
                <TextBlock Text="Firma" VerticalAlignment="Center" />
                <TextBox Text="{Binding SelectedDrug.Firma}" VerticalAlignment="Center" />
            </StackPanel>

            <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Vertical">
                <TextBlock Text="Styrke" VerticalAlignment="Center" />
                <TextBox Text="{Binding SelectedDrug.Styrke}" VerticalAlignment="Center" />
            </StackPanel>

            <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Vertical">
                <TextBlock Text="DetaljerUrl" VerticalAlignment="Center" />
                <TextBox Text="{Binding SelectedDrug.DetaljerUrl}" VerticalAlignment="Center" />
            </StackPanel>

            <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Vertical">
                <TextBlock Text="Pakning" VerticalAlignment="Center" />
                <TextBox Text="{Binding SelectedDrug.Pakning}" VerticalAlignment="Center" />
            </StackPanel>
            <!--#endregion-->
        </Grid>


    </Grid>

</Page>