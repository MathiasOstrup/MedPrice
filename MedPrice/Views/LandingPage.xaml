<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="MedPrice.Views.LandingPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MedPrice.Views"
    xmlns:models="using:MedPrice.Models"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Padding="20">
        <!-- Define 3 equal-width columns -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Row Definitions -->
        <Grid.RowDefinitions>
            <RowDefinition Height="0.5*" />
            <RowDefinition Height="2*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="2*" />
        </Grid.RowDefinitions>

        <!-- Excess Input not needed-->
        <!--
        <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Vertical" VerticalAlignment="Top">
            <TextBlock Text="Præperat:" Margin="0,0,10,10"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBox x:Name="InputField1" Grid.Column="0" PlaceholderText="Enter first value" Margin="0,0,10,10" Width="NaN" HorizontalContentAlignment="Stretch"/>
                <Button  Content="Find præperat" Grid.Column="1" Click="PræperatNavn_Click" Margin="0,0,10,10" HorizontalAlignment="Stretch"/>
            </Grid>
        </StackPanel>-->

        <!-- input and button -->
        <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Vertical" VerticalAlignment="Top">
            <TextBlock Text="Aktivt stof:" Margin="0,0,10,10"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBox x:Name="InputField2" Grid.Column="0" PlaceholderText="Enter second value" Margin="0,0,10,10"/>
                <Button Content="Find præperater" Grid.Column="1" Click="AktivtStof_Click" Margin="0,0,10,10" HorizontalAlignment="Stretch"/>
            </Grid>
        </StackPanel>

        <!-- Placeholder ListView in column 2  -->
        <ListView Grid.Row="1" Grid.Column="1" Grid.RowSpan="1" x:Name="ItemList" ItemsSource="{Binding Drugs}"
            SelectionChanged="ItemList_SelectionChanged"
            VerticalAlignment="Stretch"
            Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}"
            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
            BorderThickness="2"
            CornerRadius="{StaticResource OverlayCornerRadius}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock Text="{Binding NavnStyrkeDisplayText}"/>
                        <TextBlock Text="{Binding FirmaVarenummerDisplayText}"/>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <ListView Grid.Row="1" Grid.Column="2" Grid.RowSpan="1" x:Name="Details" ItemsSource="{Binding SelectedDrug}"
                  SelectionChanged="ItemList_SelectionChanged"
                  VerticalAlignment="Stretch"
                  Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}"
                  BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                  BorderThickness="2"
                  CornerRadius="{StaticResource OverlayCornerRadius}">
                      <TextBlock Text="{Binding SelectedDrug}"/>
        </ListView>
        

    </Grid>

</Page>